<%# 
  Delete action.

  Available local variables:
    action_if:          false if action is disabled
    url:                destroy url
    icon:               icon css classes
    confirmation:       confirmation text
    title
-%>

<%= link_to_if(action_if, content_tag(:i, "", class: icon), url, class: "destroy", title: title || t("smart_listing.actions.destroy"), data: { remote: true, method: :delete, confirm: confirmation || t("smart_listing.msgs.destroy_confirmation") }) %>
